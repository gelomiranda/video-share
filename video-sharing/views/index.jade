extends layout

block content
  .row
   #banner.page-header
     .col-lg-8.col-md-7.col-sm-6
       h1 Video Site
       p.lead Video Sharing Site
 
   ///row
  .row
   each video in videos
    .col-xs-6.col-sm-3
     a(href='video?id=#{video.id}')
      img(src='assets/img1.jpg', style='max-width:100%; max-height:100%', alt='Thumbnail 1')
      .caption
        h4= video.title
        h5= video.tags